<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e7de"
    tools:context=".aircrafts.FragmentChoiceCategoryAircraft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/plane2"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_all"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="Все Самолеты"
            android:textSize="20dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_time"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По времени поступления"
            android:textSize="15dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_count"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="Количество рейсов"
            android:textSize="20dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_tex"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="Техосмотр"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_back_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#f7e7de"
        android:src="@drawable/back_48" />

</RelativeLayout>