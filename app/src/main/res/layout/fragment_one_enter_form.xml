<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e7de"
    tools:context=".flightView.FragmentOneEnterForm">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7e7de"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@drawable/sky" />
        <EditText
            android:id="@+id/enter_text"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:hint="Минимальное значение"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/white_shape"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_select"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:background="@drawable/gradient_bg"
            android:padding="16dp"
            android:text="Запросить"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_back_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#f7e7de"
        android:src="@drawable/back_48" />

</RelativeLayout>