<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7e7de"
    tools:context=".selectview.FragmentSelectDepartments">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7e7de"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:srcCompat="@drawable/workers" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_brigade"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По бригаде"
            android:textSize="17sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_department"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По отделу"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_flight"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По конкретному рейсу"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_age"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По возрасту в бригаде"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_salary"
            android:layout_width="270dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По Зарплата в Бригаде"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#f7e7de"
        android:src="@drawable/back_48" />
</RelativeLayout>