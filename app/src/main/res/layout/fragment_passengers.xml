<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e7de"
    tools:context=".flightView.FragmentPassengers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7e7de"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@drawable/sky" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_pas"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="По маршруту"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_day"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="День"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_day2"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="Международный"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_gender"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_bg"
            android:padding="20dp"
            android:text="Половой признак"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_back_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#f7e7de"
        android:src="@drawable/back_48" />

</RelativeLayout>